<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/home">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:textSize="22dp"
        android:text="~~~ 경기도 파주시 어쩌구 저쩌구 ~~~" />

    <TextView
        android:id="@+id/research"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:text="카테고리"
        android:textSize="17dp" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:columnCount="2"
        android:layout_gravity="center"
        android:gravity="center" >

        <ImageButton
            android:id="@+id/cat_services"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:scaleType="fitXY"
            android:background="@drawable/solid_button"
            android:src="@drawable/cat_service"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="15dp"/>

        <ImageButton
            android:id="@+id/dog_services"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:scaleType="fitXY"
            android:background="@drawable/solid_button"
            android:src="@drawable/dog_service" />

        <ImageButton
            android:id="@+id/together_services"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:scaleType="fitXY"
            android:background="@drawable/solid_button"
            android:src="@drawable/dog_service" />

        <ImageButton
            android:id="@+id/reviews"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:scaleType="fitXY"
            android:background="@drawable/solid_button"
            android:src="@drawable/cat_service" />

    </GridLayout>

    <TextView
        android:id="@+id/service_review"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="돌봄후기"
        android:textSize="17dp" />

    <HorizontalScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:scaleType="fitXY"
                android:background="@color/main"
                android:layout_marginRight="15dp"
                android:src="@drawable/cat_service" />

            <ImageButton
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:scaleType="fitXY"
                android:background="@color/main"
                android:layout_marginRight="15dp"
                android:src="@drawable/dog_service" />

            <ImageButton
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:scaleType="fitXY"
                android:background="@color/main"
                android:layout_marginRight="15dp"
                android:src="@drawable/cat_service" />

            <ImageButton
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:scaleType="fitXY"
                android:background="@color/main"
                android:layout_marginRight="15dp"
                android:src="@drawable/dog_service" />

            <ImageButton
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:scaleType="fitXY"
                android:background="@color/main"
                android:layout_marginRight="15dp"
                android:src="@drawable/cat_service" />

        </LinearLayout>

    </HorizontalScrollView>

</LinearLayout>