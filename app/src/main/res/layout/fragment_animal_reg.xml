<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.animalReg.AnimalRegFragment">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
<!--            사진추가 이미지버튼-->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <ImageButton
                    android:id="@+id/animal_reg_img_btn01"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@color/light_gray" />

                <ImageView
                    android:id="@+id/animal_reg_img_btn02"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:src="@drawable/camera" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:paddingBottom="35dp"
                    android:text="사진추가"
                    android:textStyle="bold" />
            </FrameLayout>
<!--            동물버튼 레이아웃-->
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/main_padding">
                <!--버튼첫번째줄-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="20dp"
                        android:text="반려동물"/>
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/animal_reg_dog_btn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/animal_btn"
                        android:text="강아지"
                        android:textSize="@dimen/animal_btn_text_size"
                        />
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/animal_reg_cat_btn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/animal_btn"
                        android:text="고양이"
                        android:textSize="@dimen/animal_btn_text_size"/>
                </LinearLayout>
                <!---버튼두번째줄-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="20dp"
                        android:text="성별"/>
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/animal_reg_boy"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/animal_btn"
                        android:text="남아"
                        android:textSize="@dimen/animal_btn_text_size"
                        />
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/animal_reg_girl"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/animal_btn"
                        android:text="여아"
                        android:textSize="@dimen/animal_btn_text_size"/>
                </LinearLayout>
                <!---버튼세번째줄-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="20dp"
                        android:text="중성화"/>
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/animal_reg_neutering_y"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/animal_btn"
                        android:text="했어요"
                        android:textSize="@dimen/animal_btn_text_size"
                        />
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/animal_reg_neutering_n"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/animal_btn"
                        android:text="안했어요"
                        android:textSize="@dimen/animal_btn_text_size"/>
                </LinearLayout>
                <!---버튼네번째줄-->
                <LinearLayout
                    android:id="@+id/animal_reg_chip_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:visibility="visible">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="20dp"
                        android:text="동물등록"/>
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/animal_reg_chip_out"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/animal_btn"
                        android:text="외장칩"
                        android:textSize="@dimen/animal_btn_text_size"
                        />
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/animal_reg_chip_in"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/animal_btn"
                        android:text="내장칩"
                        android:textSize="@dimen/animal_btn_text_size"/>
                </LinearLayout>

            </LinearLayout>
<!--            이름,종,생일,무게-->
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/main_padding">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10px"
                    android:background="@color/light_gray"/>
<!--                이름-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="이름"
                        android:textSize="@dimen/pet_reg_main_text_size"
                        android:textStyle="bold"
                        android:layout_marginLeft="20dp"/>
                    <EditText
                        android:id="@+id/animal_reg_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:hint="이름을 입력해주세요"
                        android:gravity="right"/>
                </LinearLayout>
                <!--견종-->
                <LinearLayout
                    android:id="@+id/animal_reg_dog_breed_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="visible"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="견종"
                        android:textSize="@dimen/pet_reg_main_text_size"
                        android:textStyle="bold"
                        android:layout_marginLeft="20dp"/>
                    <EditText
                        android:id="@+id/animal_reg_dog_breed"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:hint="견종 검색 하기"
                        android:gravity="right"/>
                </LinearLayout>
                <!--묘종-->
                <LinearLayout
                    android:id="@+id/animal_reg_cat_breed_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="묘종"
                        android:textSize="@dimen/pet_reg_main_text_size"
                        android:textStyle="bold"
                        android:layout_marginLeft="20dp"/>
                    <EditText
                        android:id="@+id/animal_reg_cat_breed"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:hint="묘종 검색 하기"
                        android:gravity="right"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>