<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.animalReg.AnimalRegFragment02">
<!--제일 큰틀-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
<!--        다른동물 반응-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/main_padding">

            <TextView
                android:layout_width="250dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="다른 동물을 만났을 때 반응을
                알려주세요"
                android:textSize="@dimen/text_size_reg02"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/animal_reg2_petReact_btn01"
                android:layout_width="@dimen/btn_width_size_reg02"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/animal_btn"
                android:gravity="left"
                android:padding="@dimen/main_padding"
                android:text="무서워하며 경계해요" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/animal_reg2_petReact_btn02"
                android:layout_width="@dimen/btn_width_size_reg02"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/animal_btn"
                android:gravity="left"
                android:padding="@dimen/main_padding"
                android:text="공격적이에요" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/animal_reg2_petReact_btn03"
                android:layout_width="@dimen/btn_width_size_reg02"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/animal_btn"
                android:gravity="left"
                android:padding="@dimen/main_padding"
                android:text="반가워하며 환영해요" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/animal_reg2_PetReact_btn04"
                android:layout_width="@dimen/btn_width_size_reg02"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/animal_btn"
                android:gravity="left"
                android:padding="@dimen/main_padding"
                android:text="별로 관심을 가지지 않아요" />
        </LinearLayout>
        <!--        낯선사람 반응-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/main_padding">

            <TextView
                android:layout_width="264dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="낯선 사람을 만났을 때 반응을
                 알려주세요"
                android:textSize="@dimen/text_size_reg02"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/animal_reg2_peoReact_btn01"
                android:layout_width="@dimen/btn_width_size_reg02"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:gravity="left"
                android:background="@drawable/animal_btn"
                android:padding="@dimen/main_padding"
                android:text="무서워하며 경계해요" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/animal_reg2_peoReact_btn02"
                android:layout_width="@dimen/btn_width_size_reg02"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text="공격적이에요"
                android:padding="@dimen/main_padding"
                android:layout_marginTop="5dp"
                android:background="@drawable/animal_btn"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/animal_reg2_peoReact_btn03"
                android:layout_width="@dimen/btn_width_size_reg02"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text="반가워하며 환영해요"
                android:padding="@dimen/main_padding"
                android:layout_marginTop="5dp"
                android:background="@drawable/animal_btn"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/animal_reg2_peoReact_btn04"
                android:layout_width="@dimen/btn_width_size_reg02"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text="별로관심을 가지지않아요"
                android:padding="@dimen/main_padding"
                android:layout_marginTop="5dp"
                android:background="@drawable/animal_btn"/>
        </LinearLayout>
        <!--        만지면 물거나 예민한 부위-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/main_padding">

            <TextView
                android:layout_width="264dp"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:text="만지면 물거나 예민하게 반응하는
                 부위가 있나요"
                android:textSize="@dimen/text_size_reg02"
                android:textStyle="bold" />
            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:columnCount="3">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/animal_reg2_part_btn01"
                    android:layout_width="@dimen/part_width_size_reg02"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/animal_btn"
                    android:gravity="center"
                    android:padding="@dimen/main_padding"
                    android:text="얼굴" />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/animal_reg2_part_btn02"
                    android:layout_width="@dimen/part_width_size_reg02"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/animal_btn"
                    android:gravity="center"
                    android:padding="@dimen/main_padding"
                    android:text="가슴" />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/animal_reg2_part_btn03"
                    android:layout_width="@dimen/part_width_size_reg02"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/animal_btn"
                    android:gravity="center"
                    android:padding="@dimen/main_padding"
                    android:text="등" />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/animal_reg2_part_btn04"
                    android:layout_width="@dimen/part_width_size_reg02"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/animal_btn"
                    android:gravity="center"
                    android:padding="@dimen/main_padding"
                    android:text="앞발" />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/animal_reg2_part_btn05"
                    android:layout_width="@dimen/part_width_size_reg02"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/animal_btn"
                    android:gravity="center"
                    android:padding="@dimen/main_padding"
                    android:text="배" />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/animal_reg2_part_btn06"
                    android:layout_width="@dimen/part_width_size_reg02"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/animal_btn"
                    android:gravity="center"
                    android:padding="@dimen/main_padding"
                    android:text="꼬리" />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/animal_reg2_part_btn07"
                    android:layout_width="@dimen/part_width_size_reg02"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/animal_btn"
                    android:gravity="center"
                    android:padding="@dimen/main_padding"
                    android:text="뒷발" />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/animal_reg2_part_btn08"
                    android:layout_width="@dimen/part_width_size_reg02"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/animal_btn"
                    android:gravity="center"
                    android:padding="@dimen/main_padding"
                    android:text="없음" />
            </GridLayout>
        </LinearLayout>
        <!-- 다음버튼 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/animal_reg_next_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/blue_btn"
            android:text="동물등록" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_marginLeft="20dp"
            android:text="이름"
            android:textSize="50sp"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.core.widget.NestedScrollView>